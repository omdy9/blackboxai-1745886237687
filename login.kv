<LoginScreen>:
    name: "login"

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)
        size_hint: 0.8, 0.6
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            text: "Login"
            halign: "center"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]

        MDTextField:
            id: username_input
            hint_text: "Username"
            mode: "rectangle"

        MDTextField:
            id: password_input
            hint_text: "Password"
            mode: "rectangle"
            password: True

        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": 0.5}
            on_release: root.login_user()

        MDRaisedButton:
            text: "Go to Register"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "register"
